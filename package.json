{
  "name": "electron-shell",
  "version": "1.0.0",
  "description": "A minimal Electron application for displaying webApp",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "electron-chrome-context-menu": "^1.1.0",
    "electron-chrome-extensions": "3.10.1"
  },
  "build": {
    "productName": "vimp-pro",
    "appId": "com.ittc.electron-shell",
    "directories": {
      "output": "dist_electron"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "installerLanguages": "zh_CN",
      "language": "2052",
      "oneClick": false,
      "perMachine": true,
      "runAfterFinish": false
    },
    "asar": false,
    "extraResources": [{ "from": "./configs/pages.json", "to": "../configs/pages.json" }],
    "win": {
      "target": "nsis",
      "icon": "./build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false
    }
  }
}
